<h1>Projects</h1>
<table>
  <% @projects.each do |project| %>
    <% user = User.find(project.user_id) %>
    <tr>
      <td valign="top"><%= link_to "#{project.name}", project %> (by <%= link_to "#{user.name}", user %>)</td>
      <td><%= gravatar_for user %></td>
      <td valign="top"><em><%= project.description %></em></td>
      <td>&nbsp;&nbsp;</td>
      <td valign="top">Created at <em><%= project.created_at.to_s[0, 10] %></em></td>
    </tr>
    <tr><td>&nbsp;</td></tr>
  <% end %>
</table>